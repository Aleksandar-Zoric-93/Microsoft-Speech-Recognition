<Window x:Name="Setup" x:Class="Voice.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Voice"
        mc:Ignorable="d"
        Title="Setup" Height="350" Width="525" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize">
    <Grid Background="#FF2C2C2C" VerticalAlignment="Bottom" Height="350" Margin="-1,0,0,0">
        <TextBox x:Name="yourName" HorizontalAlignment="Left" Height="23" Margin="174,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="178" Background="#FF5F5F5F" Text="Your Name"/>
        <TextBox x:Name="aiNameTxt" HorizontalAlignment="Left" Height="23" Margin="174,139,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="178" Background="#FF5F5F5F" Text="AI Name"/>
        <Button x:Name="submitBtn" Content="Submit" HorizontalAlignment="Left" Margin="226,206,0,0" VerticalAlignment="Top" Width="75" Click="submitBtn_Click" Background="#FF5F5F5F"/>
        <Label x:Name="copyrightLbl" Content="©Aleksandar Zoric 2017" HorizontalAlignment="Left" Margin="197,298,0,0" VerticalAlignment="Top" Foreground="#FFACACAC"/>

    </Grid>
</Window>
